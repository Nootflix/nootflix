{
  "name": "Nootflix-ReFresh",
  "version": "0.1.1",
  "description": "Nootflix",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "dist": "npm run build && build --publish onTagOrDraft",
    "build": "echo building... && ./node_modules/.bin/electron-builder build"

    
  },
  "repository": "https://github.com/ThePStar7/nootflix",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "ThePStar7",
  "license": "AGPLv3",
  "devDependencies": {
    "electron": "^2.0.6",
    "electron-builder": "^20.28.4"
  },
  "dependencies": {
    "async": "^2.6.1",
    "bp_event": "^1.2.0",
    "bp_logger": "^1.1.1",
    "bp_statemachine": "^1.0.14",
    "child_process": "^1.0.2",
    "electron-packager": "^12.1.0",
    "electron-storage": "^1.0.7",
    "fs-extra": "^7.0.0",
    "hls.js": "^0.10.1",
    "http": "0.0.0",
    "path": "^0.12.7",
    "python-struct": "^1.0.6",
    "readline": "^1.3.0",
    "req-fast": "^0.2.17",
    "request": "^2.87.0",
    "update-electron-app": "^1.3.0",
    "url": "^0.11.0",
    "util": "^0.11.0"
  },
  "build": {
  "appId": "gq.sineflex.nootflix",
  "category": "public.app-category.entertainment",
  "files": [
    "dist/",
    "node_modules/",
    "static/",
    "main.js",
    "index.html",
    "package.json"
  ],
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ]
  }
},
  "directories": {
    "output": "release"
}
}
